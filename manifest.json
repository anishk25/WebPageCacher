{
    "name": "Webpage Cacher",
    "version": "0.1",
    "description": "Allows users to cache webpages so that they can browse through them offline",
    "manifest_version": 2,
    "permissions": [
        "storage",
        "unlimitedStorage",
        "activeTab",
        "webNavigation",
        "http://*/*",
        "https://*/*",
        "<all_urls>"
    ],
    "background": {
        "page": "background.html",
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "images/web_cache.png"
    }
}
